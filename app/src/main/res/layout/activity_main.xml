<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zw.postman.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_gravity="center_vertical">

            <Spinner
                android:id="@+id/main_mode_select"
                android:elevation="2dp"
                android:gravity="top|end"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:addStatesFromChildren="false"
                android:layout_height="match_parent" />

            <TextView
                android:text="GET"
                android:id="@+id/main_text_mode"
                android:layout_weight="1.43"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:elevation="0dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/main_et_url_input"
                android:layout_weight="6"
                android:textSize="14sp"
                android:contentDescription="URL" />

            <Button
                android:text="SEND"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/main_button_send" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

