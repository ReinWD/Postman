<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_layout_margin">
    <TextView
        android:id="@+id/recycler_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_layout_margin"
        android:textSize="20sp"
        android:textColor="@color/font"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/history_protocol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/protocol_http"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/activity_layout_margin_2x"
            android:textSize="25sp"
            android:textColor="@color/font"/>
        <TextView
            android:id="@+id/history_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recycler_sample"
            android:textSize="25sp"
            android:textColor="@color/font"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <Button
            android:id="@+id/history_delete"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@android:drawable/ic_menu_delete"
            />
        <Button
            android:id="@+id/history_yes"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@mipmap/correct"/>
    </LinearLayout>
</LinearLayout>